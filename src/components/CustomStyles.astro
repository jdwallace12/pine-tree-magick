---
import '@fontsource-variable/merriweather-sans';
import '@fontsource-variable/lora';
// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Merriweather Sans Variable', sans-serif;
    --aw-font-serif: 'Merriweather Sans Variable', sans-serif;
    --aw-font-heading: 'Lora Variable', serif;

    --aw-color-primary: #f59bbb;
    --aw-color-secondary: #9acac6;
    --aw-color-accent: #cba3d8;

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: #1a263a;
    --ptm-dark-green: #649196;

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Merriweather Sans Variable', sans-serif;
    --aw-font-serif: 'Merriweather Sans Variable', sans-serif;
    --aw-font-heading: 'Lora Variable', serif;

    --aw-color-primary: #f59bbb;
    --aw-color-secondary: #9acac6;
    --aw-color-accent: #cba3d8;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: #1a263a;

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
