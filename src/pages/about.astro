---
import Header from '~/components/widgets/Header.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About the Mystic Realm',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Readings', href: '/readings' },
        { text: 'About', href: '/about' },
        { text: 'Substack', href: '#substack' },
      ]}
      actions={[
        // {
        //   text: 'Hire me',
        //   href: '#',
        //   variant: 'primary',
        // },
      ]}
      isSticky
    />
  </Fragment>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Welcome to the Mystic Realm"
    image={{
      src: 'https://images.unsplash.com/photo-1448375240586-882707db888b?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Mystical Image',
    }}
  >
    <Fragment slot="title"> Unveil the secrets of the universe with our Enchanting Astrological Templates </Fragment>

    <Fragment slot="subtitle">
      Explore the cosmos, align your energies, and manifest your dreams. Our templates guide you through the mystical
      journey of self-discovery and empowerment.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Cosmic Statistics"
    stats={[
      { title: 'Zodiac Signs', amount: '12' },
      { title: 'Planets', amount: '8' },
      { title: 'Tarot Cards', amount: '78' },
      { title: 'Crystals', amount: '50+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Enchanted Templates"
    subtitle="Discover templates that resonate with your soul's journey, designed to enhance your spiritual practice."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Astrology',
        description:
          'Dive deep into the stars and uncover your astrological chart. Our templates help you interpret celestial influences.',
        icon: 'tabler:star',
      },
      {
        title: 'Tarot',
        description:
          'Harness the power of tarot to gain insights and guidance. Our templates provide a framework for your readings.',
        icon: 'tabler:star',
      },
      {
        title: 'Crystals',
        description:
          'Learn about the healing properties of crystals and how to incorporate them into your life with our beautifully designed templates.',
        icon: 'tabler:star',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Moon Phases',
        description:
          'Align your intentions with the lunar cycle. Our templates guide you through the phases of the moon for optimal manifestation.',
        icon: 'tabler:moon',
      },
      {
        title: 'Rituals',
        description:
          'Create sacred space and perform rituals that resonate with your intentions. Our templates provide step-by-step guidance.',
        icon: 'tabler:wand',
      },
      {
        title: 'Meditation',
        description:
          'Enhance your meditation practice with templates designed to deepen your connection to the universe.',
        icon: 'tabler:star',
      },
      {
        title: 'Herbalism',
        description:
          'Explore the magical properties of herbs and how to use them in your practice with our informative templates.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Astrological Events',
        description:
          'Stay informed about upcoming astrological events and how they affect your life with our event tracking templates.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Spiritual Growth',
        description:
          'Embark on a journey of self-discovery and spiritual growth with our templates designed to support your path.',
        icon: 'tabler:growth',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1533294455009-a77b7557d2d1?q=80&w=3840&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Mystical Landscape',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="Embrace the magic within and connect with the universe. Our values guide our practice and offerings."
    items={[
      {
        title: 'Intuition',
        description: 'Trust your inner voice and let it guide you on your spiritual journey.',
      },
      {
        title: 'Community',
        description: 'We believe in the power of connection and support within our mystical community.',
      },
      {
        title: 'Empowerment',
        description: 'Our templates are designed to empower you to take charge of your spiritual path.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Achievements"
    subtitle="Celebrating our journey through the mystical realm. Join us as we honor our milestones."
    isReversed={true}
    callToAction={{
      text: 'Explore More',
      href: '/',
    }}
    items={[
      {
        title: 'Global Community',
        description: 'Connecting souls from all corners of the world through shared wisdom and practices.',
        icon: 'tabler:globe',
      },
      {
        title: 'Positive Feedback',
        description:
          'Our templates have helped countless individuals on their spiritual journeys. Join the testimonials.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Recognition',
        description: 'Honored as a trusted source for spiritual guidance and resources in the community.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Locations"
    tagline="Find Us in the Cosmic Realm"
    columns={4}
    items={[
      {
        title: 'Mystic Valley',
        description: '1234 Enchanted Way, 12345, Dreamland',
      },
      {
        title: 'Witchwood',
        description: '5678 Spellbound St, 56789, Enchantment City',
      },
      {
        title: 'Celestial Heights',
        description: '9012 Starry Lane, 90123, Universe Town',
      },
      {
        title: 'Crystal Cove',
        description: '3456 Gemstone Rd, 34567, Mystic Shores',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Mystical Support"
    tagline="Contact Us for Guidance"
    columns={2}
    items={[
      {
        title: 'Chat with our Oracles',
        description: 'Connect with our team of spiritual guides for insights and support. We are here to help you.',
        icon: 'tabler:messages',
      },
      {
        title: 'Call our Mystic Line',
        description:
          'Reach out for personalized guidance and support on your spiritual journey. We are just a call away.',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
