---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'Book a Written Reading | Pine Tree Magic',
  description: "Book a written reading with Pine Tree Magick"
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText title="Book a Written Reading" />

  <iframe
    src="https://docs.google.com/forms/d/e/1FAIpQLScnNdTh0dvVhI6VzpDnAMs_0Zg9zEhDZjRgmkMgJbnbuqoBPA/viewform?embedded=true"
    width="100%"
    class="h-[4600px] md:h-[3800px] xl:h-[3750px]"
    frameborder="0"
    marginheight="0"
    marginwidth="0"
  >
    Loadingâ€¦
  </iframe>
  </Layout>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const iframe = document.querySelector('iframe');

        iframe.addEventListener('load', () => {
            const iframeDoc = iframe.contentWindow || iframe.contentDocument;
            if (iframeDoc.location.href.includes('formResponse')) {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        });
    });
</script>