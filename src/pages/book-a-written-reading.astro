---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'Book a Written Reading | Pine Tree Magic',
  description: "Book a written reading with Pine Tree Magick"
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText title="Book a Written Reading" />

  <iframe
    src="https://docs.google.com/forms/d/e/1FAIpQLScnNdTh0dvVhI6VzpDnAMs_0Zg9zEhDZjRgmkMgJbnbuqoBPA/viewform?embedded=true"
    width="100%"
    id="googleForm" 
    class="h-[4400px] md:h-[3500px] xl:h-[3550px]"
    frameborder="0"
    marginheight="0"
    marginwidth="0"
  >
    Loadingâ€¦
  </iframe>


  <script>
    const iframe = document.getElementById('googleForm');
  
    iframe.addEventListener('load', () => {
      if (iframe.src.includes('formResponse')) {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }
    });

  </script>
  </Layout>