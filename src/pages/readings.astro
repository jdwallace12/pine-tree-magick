---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

const metadata = {
  title: 'Readings',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Readings', href: '/readings' },
        { text: 'About', href: '/about' },
        { text: 'Substack', href: '#substack' },
      ]}
      actions={[
        // {
        //   text: 'Hire me',
        //   href: '#',
        //   variant: 'primary',
        // },
      ]}
      isSticky
    />
  </Fragment>
  <div class="flex flex-col md:flex-row gap-12 max-w-7xl mx-auto p-6">
    <div class="flex flex-col flex-1 mt-12">
      <h1 class="text-3xl font-bold">Book a Reading</h1>
      <p class="mt-1">Please fill out the form below to schedule your reading.</p>
    </div>
    <div class="flex-1">
      <iframe
        src="https://docs.google.com/forms/d/e/1FAIpQLSc_nTGY_HqeXi3kt0WWlhZ-G-69YJ8CbZMtzijiF9N0YhJrYA/viewform?embedded=true"
        width="100%"
        height="2900px"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
      >
        Loadingâ€¦
      </iframe>
    </div>
  </div>
</Layout>
