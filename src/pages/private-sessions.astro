---
import Layout from '~/layouts/PageLayout.astro';

import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Private Sessions | Pine Tree Magick',
  description: 'Pinetree Magick Readings',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <div class="mx-auto max-w-7xl p-4 md:px-8">
    <p class="text-base text-secondary dark:text-secondary font-bold tracking-wide uppercase text-center mt-12">Reserve a Live 60-Minute Video Session </p>
    <h1 class="font-normal tracking-tighter font-heading text-heading text-3xl md:text-5xl text-center mb-4">Private Sessions</h1>
    <p class="text-xl text-muted mb-6 dark:text-slate-300 text-center">Each session is live one-on-one, confidential, recorded and sent to you via email.</p>
  </div>
</Layout>
