---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import HeroBackground from '~/components/widgets/HeroBackground.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import LatestWorkshops from '~/components/widgets/LatestWorkshops.astro';
import { getPermalink } from '~/utils/permalinks';
import ContentListicle from '~/components/widgets/ContentListicle.astro';

const metadata = {
  title: 'Pine Tree Magick',
  desciption: 'Pine Tree Magick is a something',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Readings', href: '/readings' },
        { text: 'About', href: '/about' },
        { text: 'Substack', href: '#substack' },
      ]}
      actions={[
        // {
        //   text: 'Hire me',
        //   href: '#',
        //   variant: 'primary',
        // },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <HeroBackground
    id="hero"
    title="Pine Tree Magic"
    tagline="All Things Woo"
    actions={[{ variant: 'primary', text: 'Book A Reading', href: getPermalink('/contact#form') }]}
    bg={`
      <div class="absolute inset-0 bg-gradient-to-b from-blue-900 to-indigo-900">
        <div class="absolute inset-0 opacity-30" style="background-image: url('https://images.unsplash.com/photo-1562944634-d309c1b1666e?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover;"></div>
      </div>
    `}
  >
    <Fragment slot="subtitle">
      I'm an Intuitive Astrologer dedicated to illuminating your soul's cosmic journey. <br /> With 5 years of experience
      reading natal charts and studying celestial wisdom, I help decode the divine messages written in the stars, transforming
      cosmic insights into profound personal guidance.
    </Fragment>
  </HeroBackground>

  <!-- Content Widget **************** -->

  <Content
    id="porfolio"
    isReversed
    items={[
      {
        title: 'The Reading:',
        description:
          'Through the ancient art of astrology, I conducted a deep natal chart analysis for a seeker looking to understand their life path. We explored their rising sign, planetary aspects, and the powerful influences shaping their journey.',
      },
      {
        title: 'My Approach:',
        description:
          'Using traditional astrological techniques combined with modern interpretations, I created a comprehensive birth chart analysis, identifying key transits and providing guidance for navigating upcoming celestial events.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1515355318844-9717e2575853?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Hand-drawn botanical moon phases',
    }}
    callToAction={{
      target: '_blank',
      text: 'Go to the project',
      icon: 'tabler:chevron-right',
      href: '#',
    }}
    wrapperClass=""
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Sacred Service: <br /><span class="text-2xl">Natal Chart Reading & Transit Analysis</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Begin your astrological journey with these sacred steps."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Birth Chart Creation</span>',
        description:
          'Share your birth time, date, and location. These cosmic coordinates are the foundation of your unique celestial blueprint, revealing the planetary positions at your moment of arrival.',
        icon: 'tabler:package',
      },
      {
        title: 'Step 2: <span class="font-medium">Chart Interpretation</span>',
        description:
          "Together we'll explore your natal placements, understanding how the planets have woven their energy into your life story. Each aspect tells a tale of potential and purpose.",
        icon: 'tabler:letter-case',
      },
      {
        title: 'Step 3: <span class="font-medium">Transit Analysis</span>',
        description:
          'Discover how current planetary movements interact with your natal chart, providing insight into timing and opportunities. Understanding these cosmic rhythms helps guide your path forward.',
        icon: 'tabler:paint',
      },
      {
        title: 'Alignment Complete!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1532592068623-db1978e40df5?q=80&w=2836&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Steps image',
    }}
    wrapperClass=""
  />

  <LatestWorkshops />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'The Reading:',
        description: `A transformative solar return reading for a seeker entering their personal new year. We explored the themes, opportunities, and challenges that the stars have aligned for their journey ahead.`,
      },
      {
        title: 'My Approach:',
        description: `Through careful analysis of the solar return chart and its relationship to the natal placements, I provided guidance on how to harness the unique energies of this celestial new beginning.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1533134486753-c833f0ed4866?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Celestial map with herbs',
    }}
    callToAction={{
      target: '_blank',
      text: 'Go to the project',
      icon: 'tabler:chevron-right',
      href: '#',
    }}
    wrapperClass=""
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Sacred Service: <br /><span class="text-2xl">Solar Return Reading & Year Ahead Forecast</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Sacred Services"
    title="Celestial Guidance Offerings"
    subtitle="Discover the ancient wisdom of the stars through personalized astrological readings and cosmic guidance."
    items={[
      {
        title: 'Natal Chart Readings',
        description:
          'Your cosmic blueprint revealed through careful analysis of planetary positions at your time of birth.',
        icon: 'tabler:star',
      },
      {
        title: 'Transit Forecasting',
        description: 'Understanding how current planetary movements affect your personal chart and life journey.',
        icon: 'tabler:moon',
      },
      {
        title: 'Synastry Readings',
        description: 'Exploring relationship dynamics through the lens of planetary interactions between charts.',
        icon: 'tabler:hearts',
      },
      {
        title: 'Solar Return Analysis',
        description:
          'Mapping out your personal year ahead using the powerful moment the Sun returns to its natal position.',
        icon: 'tabler:sun',
      },
      {
        title: 'Electional Astrology',
        description: 'Selecting auspicious dates for important events by working with favorable planetary alignments.',
        icon: 'tabler:calendar-star',
      },
      {
        title: 'Ongoing Cosmic Support',
        description:
          'Regular guidance and updates about how current astrological events are affecting your chart and life path.',
        icon: 'tabler:infinity',
      },
    ]}
    wrapperClass=""
  />

  <!-- Content Widget **************** -->
  <Content
    id="about"
    columns={3}
    items={[
      {
        icon: 'tabler:brand-dribbble',
        callToAction: {
          target: '_blank',
          text: 'Dribbble',
          href: '#',
        },
      },
      {
        icon: 'tabler:brand-behance',
        callToAction: {
          target: '_blank',
          text: 'Behance',
          href: '#',
        },
      },
      {
        icon: 'tabler:brand-pinterest',
        callToAction: {
          target: '_blank',
          text: 'Pinterest',
          href: '#',
        },
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1491349174775-aaafddd81942?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Colorful Image',
      loading: 'eager',
    }}
    wrapperClass=""
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About me</h2>
      <p>
        Welcome to my creative journey. My work is a testament to my commitment to bringing ideas to life, where each
        pixel becomes a brushstroke in the canvas of imagination.
      </p>
      <br />
      <p>
        I find inspiration in the world around me, whether through the pages of a captivating novel, the intricate
        details of typography, or the vibrant hues of nature during my outdoor escapades.
      </p>
      <br />
      <p>If you're curious to dive deeper into my work, you can follow me:</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Seeker Testimonials"
    subtitle="Hear from those who have found clarity through celestial guidance."
    testimonials={[
      {
        testimonial:
          "Their insight into my natal chart was profound. They revealed patterns I'd never noticed and helped me understand my life purpose through the lens of my North Node.",
        name: 'Sarah Johnson',
        job: 'Spiritual Seeker',
      },
      {
        testimonial:
          'The transit reading helped me navigate a challenging period with greater awareness. Understanding the astrological weather made all the difference.',
        name: 'Michael Chen',
        job: 'Life Coach',
      },
      {
        testimonial:
          'Their synastry reading gave my partner and I deep insights into our relationship dynamics. We now understand our challenges and strengths so much better.',
        name: 'Emma Rodriguez',
        job: 'Relationship Coach',
      },
    ]}
    wrapperClass=""
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Align with the Stars"
    subtitle="Ready to discover what the cosmos has in store for you?"
    wrapperClass=""
    actions={[
      {
        variant: 'primary',
        text: 'Book a Reading',
        href: '/',
      },
    ]}
  />

  <!-- ContentListicle Widget **************** -->

  <ContentListicle
    tagline="Listicle Example"
    title="Top 5 Reasons to Use AstroWind"
    subtitle="Discover why developers love this template"
    items={[
      {
        title: 'Lightning Fast Performance',
        description: 'Built with Astro 4.0, delivering incredible speed and optimization out of the box.',
        icon: 'tabler:rocket',
      },
      {
        title: 'TailwindCSS Powered',
        description: 'Fully customizable design system with utility-first CSS framework.',
        icon: 'tabler:brush',
      },
      {
        title: 'Dark Mode Ready',
        description: 'Seamless dark mode integration with perfect color transitions.',
        icon: 'tabler:moon',
      },
      {
        title: 'SEO Optimized',
        description: 'Built-in SEO best practices to help your site rank better.',
        icon: 'tabler:search',
      },
      {
        title: 'Open Source',
        description: 'Free to use and modify, with regular updates and community support.',
        icon: 'tabler:source-code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'AstroWind Template Screenshot',
    }}
    callToAction={{
      text: 'Get Started',
      href: 'https://github.com/onwidget/astrowind',
      icon: 'tabler:download',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </ContentListicle>
</Layout>
